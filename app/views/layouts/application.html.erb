<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <script src="https://kit.fontawesome.com/f4d3a5e756.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg">
        <div class="container">
          <a class="navbar-brand" href="/public">
            <span>
              LOGO
            </span>
          </a>

          <div>
            <ul class="navbar-nav ml-auto">
              <% if admin_signed_in? %>
                <li>
                  <%= link_to admin_items_path do %>
                    商品一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to admin_customers_path do %>
                    会員一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to admin_root_path do %>
                    注文履歴一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_admin_session_path, method: :delete do %>
                    ログアウト
                  <% end %>
                </li>
                
              <% elsif customer_signed_in? %>
                <li>
                  <%= link_to public_customer_path(current_customer) do %>
                    マイページ
                  <% end %>
                </li>
                <li>
                  <%= link_to public_items_path do %>
                    商品一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_customer_session_path, method: :delete do %>
                    ログアウト
                  <% end %>
                </li>
                
              <% else %>
                <li>
                  <%= link_to public_about_path do %>
                    About
                  <% end %>
                </li>
                <li>
                  <%= link_to public_items_path do %>
                    商品一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to new_customer_registration_path do %>
                    新規登録
                  <% end %>
                </li>
                <li>
                  <%= link_to new_customer_session_path do %>
                    ログイン
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
